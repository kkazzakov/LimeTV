<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" >
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="AppTheme.Toolbar" parent="android:Widget">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/light_grey</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/light_grey</item>
    </style>
</resources>